<html>
<%- include('header', {logged: true, firstName: false}); %>

<div id="add-product-form" class="container">
	<div class="row">
		<div class="col-sm-12 title">
			<h2>Agregar Nuevo Producto</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<form class='form-add-product' action='/add_product' method='POST'>
				<input type='text', name='productname', class='form-control', placeholder='Nombre del Producto' required autofocus>
				<input type='text', name='img', class='form-control nomargin', placeholder='Imagen'>
				<input type='text', name='price', class='form-control', placeholder='Precio del Producto' required>
				<input type='text', name='stock', class='form-control', placeholder='Stock Actual' required>
				<button class='btn btn-lg btn-primary btn-block' type='submit'>Agregar Producto</button>
			<span class="clearfix"></span>
			</form>
		</div>
	</div>
</div>
</html>