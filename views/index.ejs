<html>
<%- include('header', {logged: false}); %>

<div id="login-form" class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<form class="form-signin" action="/login", method="POST">
				<input type="text" name="username" class="form-control login-user" placeholder="nombre de usuario" required autofocus>
				<input type="password" name="password" class="form-control login-password" placeholder="password" required>
					<button class="btn btn-lg btn-primary btn-block login-entrar" type="submit">
						Entrar
					</button>
					<span class="clearfix"></span>
					<div id="message">
						<%if (message) { %>
							<h1 class="text-center error-message"><% message %></h1>
						<% } %>
					</div>
			</form>
		</div>
	</div>
</div>
</html>