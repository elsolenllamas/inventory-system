<html>
<%- include('header', {logged: true, firstName: firstName}); %>
<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h2><%= title %></h2>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-sm-2">
			<a href="/add_product" class="btn btn-primary">Nuevo Producto</a>
		</div>
	</div>
</div>
<div id="products" class="container">
	<div class="row list-header">
		<div class="col-12 col-sm-3">
			Nombre
		</div>
		<div class="col-12 col-sm-2">
			Precio
		</div>
		<div class="col-12 col-sm-2">
			Cantidad
		</div>
	</div>
	<div class="registros row">
	<% products.forEach(function(product) { %>
		<div class="col-12 col-sm-3">
			<%= product.productname %>
		</div>
		<div class="col-12 col-sm-2">
			<%= product.price %>
		</div>
		<div class="col-12 col-sm-2">
			<%= product.quantity %>
		</div>
		<div class="col-12 col-sm-3">
			<form action='/add_stock' method='POST' data-product='<%- product.productname %>'>
				<input type='hidden' name='stockproduct' value='noqui'/>
				<button type="submit">cargar stock</button>
			</form>
		</div>
    <% }); %>
	</div>
</div>
</html>